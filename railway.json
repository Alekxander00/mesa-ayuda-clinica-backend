{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm run build && npm run db:generate"
    },
    "deploy": {
      "startCommand": "npm run db:push && npm start",
      "restartPolicyType": "ON_FAILURE",
      "numReplicas": 1
    }
  }